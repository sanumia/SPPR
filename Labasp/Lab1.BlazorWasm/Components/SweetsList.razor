@using Lab1.Domain.Entities
@inject IDataService DataService
@implements IDisposable

@if (!DataService.Success)
{
    <div class="alert alert-danger" role="alert">
        @DataService.ErrorMessage
    </div>
}
else if (DataService.Sweets.Any())
{
    <div class="row g-3">
        @foreach (var sweet in DataService.Sweets)
        {
            <div class="col-md-4">
                <div class="card h-100">
                    @if (!string.IsNullOrWhiteSpace(sweet.Image))
                    {
                        <img src="@sweet.Image" class="card-img-top" alt="@sweet.Name" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@sweet.Name</h5>
                        <p class="card-text flex-grow-1">@sweet.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary mb-0">@sweet.Price.ToString("0.00") BYN</span>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => OnSweetSelected.InvokeAsync(sweet.Id)">
                                <i class="bi bi-info-circle"></i> Подробнее
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        Сладости не найдены
    </div>
}

@code {
    [Parameter] public EventCallback<int> OnSweetSelected { get; set; }

    protected override void OnInitialized()
    {
        DataService.DataLoaded += StateHasChanged;
    }

    public void Dispose()
    {
        DataService.DataLoaded -= StateHasChanged;
    }
}

