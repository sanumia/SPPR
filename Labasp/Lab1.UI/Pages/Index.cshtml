@page
@using System.Linq
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<main class="container">
    <h1>Лабораторная работ 2</h1>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.Identity?.IsAuthenticated == true)
    {
        @if (User.IsInRole("POWER-USER"))
        {
            <div class="mb-3 d-flex gap-2">
                <a class="btn btn-warning" asp-page="/Admin/Sweets/Index">
                    <i class="bi bi-gear"></i> Администрирование Sweet
                </a>
                <a class="btn btn-outline-warning" asp-page="/Admin/Categories/Index">
                    <i class="bi bi-tags"></i> Администрирование Category
                </a>
            </div>
        }
    }
    <p>Список</p>
    <ol type="A">
        @for (int i = 1; i <= 6; i++)
        {
            <li>
                элемент @i списка
            </li>
        }
    </ol>
    <hr class="dropdown-divider">
    <h1>Форма</h1>
    <form method="post">
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Выберите элемент:</label>
            <div class="col-sm-10">
                <select class="form-control">
                    <option value="">-- Выберите элемент --</option>
                </select>
            </div>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1">
            <label class="form-check-label" for="gridCheck1">
                Чек-бокс 1
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck2">
            <label class="form-check-label" for="gridCheck2">
                Чек-бокс 2
            </label>
        </div>
        <fieldset class="row">
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                    <label class="form-check-label" for="gridRadios1">Радио-1</label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                    <label class="form-check-label" for="gridRadios2">Радио-2</label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                    <label class="form-check-label" for="gridRadios3">Радио-3</label>
                </div>
            </div>
        </fieldset>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Отправить</button>
    </form>
</main>
