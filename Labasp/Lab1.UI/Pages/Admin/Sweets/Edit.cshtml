@page "{id:int}"
@model Lab1.UI.Pages.Admin.Sweets.EditModel
@{
    ViewData["Title"] = "Редактировать сладость";
}

<h1 class="h3 mb-3">Редактировать сладость</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Item.Id" />
    <div class="mb-3">
        <label asp-for="Item.Name" class="form-label"></label>
        <input asp-for="Item.Name" class="form-control" />
        <span asp-validation-for="Item.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Item.Description" class="form-label"></label>
        <textarea asp-for="Item.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Item.Price" class="form-label"></label>
        <input asp-for="Item.Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Item.CategoryId" class="form-label">Категория</label>
        <select asp-for="Item.CategoryId" asp-items="Model.Categories" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Изображение</label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Сохранить</button>
    <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Назад</a>
</form>

