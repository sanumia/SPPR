@page "{id:int}"
@model Lab1.UI.Pages.Admin.Categories.DeleteModel

<h4>Удалить категорию</h4>
<div class="alert alert-warning">Вы уверены, что хотите удалить категорию <strong>@Model.Item?.Name</strong>?</div>
<form method="post">
    <input type="hidden" asp-for="Item.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>


