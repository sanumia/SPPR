@model SweetsCatalogViewModel
@{
    var currentCategory = Model.Sweets.CurrentCategory ?? Model.SelectedCategory;
    var displayName = Model.SelectedCategoryDisplayName ?? "Все категории";
}

<div class="d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-2 mb-3">
    <h2 class="h5 mb-0">@displayName</h2>
    <div class="text-muted small">
        Страница @Model.Sweets.CurrentPage из @Model.Sweets.TotalPages
    </div>
</div>

@if (Model.HasError)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
    </div>
}

@if (Model.Sweets.Items.Any())
{
    <div class="row g-4">
        @foreach (var item in Model.Sweets.Items)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(item.Image))
                    {
                        <img src="@item.Image"
                             class="card-img-top"
                             alt="@item.Name"
                             style="height: 220px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light"
                             style="height: 220px;">
                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            <span class="badge bg-secondary">@item.Category?.Name</span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">@item.Description</p>

                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fs-5 text-primary">@item.Price.ToString("0.00") BYN</span>
                            </div>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <form asp-controller="Cart"
                                      asp-action="Add"
                                      asp-route-id="@item.Id"
                                      method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                                    <button class="btn btn-success w-100" type="submit">
                                        <i class="bi bi-cart-plus me-1"></i>В корзину
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary w-100" href="/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Войдите, чтобы добавить
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <Pager current-page="Model.Sweets.CurrentPage"
               total-pages="Model.Sweets.TotalPages"
               asp-controller="Sweets"
               asp-action="Index"
               asp-route-category="@(string.IsNullOrWhiteSpace(currentCategory) ? null : currentCategory)">
        </Pager>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-emoji-frown display-4 text-muted d-block mb-3"></i>
            <h5 class="mb-2">Сладостей не найдено</h5>
            <p class="text-muted mb-0">Попробуйте выбрать другую категорию или страницу</p>
        </div>
    </div>
}


